{% extends 'KitpagesCmsBundle:Page:layout.html.twig' %}
{% block body %}
<div class="layout-main-center">
    <div class="layout-inside-main">
        {% render 'AppSiteBundle:UserArea:widgetNavigation' with {'appSiteUserAreaNavigationSelect':'beatDownloadable'} %}
        <div class="app-site-purchase-process app-site-userarea">
            <h2 class="">{{ ('My orders') | trans }}</h2>

            {% for order in orderList %}
            <table>
                <tr>
                    <td>{{ ('Order') | trans }} NÂ° {{order.orderId}}</td>
                    <td class="app-site-userarea-invoice" >
                        {% if order.invoiceId %}
                            <a href="{{ path('KitpagesShopBundle_invoice_invoiceDisplay', { 'orderId':order.orderId }) }}" target="_about" >
                                <img  width='19' height='21' src="{{ asset('img/shop/invoice_picto.png') }}">
                            </a>
                        {% endif %}
                    </td>
                    <td class="app-site-userarea-order" >
                        {% if order.invoiceId %}
                        <a href="{{ path('KitpagesShopBundle_order_displayOrder', { 'orderId':order.orderId }) }}" >
                            <img  width='18' height='15' src="{{ asset('img/shop/order_picto.png') }}">
                        </a>
                        {% endif %}
                    </td>
                </tr>
            </table>
            {% endfor %}
        </div>

    </div>

</div>

{% endblock body %}
